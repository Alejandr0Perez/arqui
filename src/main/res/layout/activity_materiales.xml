<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MaterialesActivity">

    <EditText
        android:id="@+id/editTextNombreMaterial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre del material"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="37dp" />

    <EditText
        android:id="@+id/editTextCantidad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cantidad"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toBottomOf="@+id/editTextNombreMaterial"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp" />

    <EditText
        android:id="@+id/editTextCostoUnitario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Costo unitario"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toBottomOf="@+id/editTextCantidad"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="4dp" />

    <Button
        android:id="@+id/btnGuardarMaterial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar Material"
        app:layout_constraintTop_toBottomOf="@+id/editTextCostoUnitario"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="3dp" />



</androidx.constraintlayout.widget.ConstraintLayout>